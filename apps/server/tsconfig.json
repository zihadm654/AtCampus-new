{
	"compilerOptions": {
		"baseUrl": "./",
		"composite": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"],
			"prisma": ["node_modules/prisma"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["bun"],
		"verbatimModuleSyntax": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
